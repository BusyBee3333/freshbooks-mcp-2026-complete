{
  "name": "@mcpengine/freshbooks",
  "version": "1.0.0",
  "description": "FreshBooks MCP server with comprehensive API coverage and React apps",
  "type": "module",
  "bin": {
    "freshbooks-mcp": "./dist/main.js"
  },
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "cd src/ui/react-app && npm install && npm run build",
    "dev": "tsx src/main.ts",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "freshbooks",
    "accounting",
    "invoicing",
    "api"
  ],
  "author": "MCPEngine",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@modelcontextprotocol/ext-apps": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  }
}
